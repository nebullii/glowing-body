---
import Layout from '../layouts/Layout.astro';

const categories = [
    {
        title: "Real Food",
        description: "Discover the power of whole, unprocessed foods and their benefits",
        image: "/images/real-food.jpg",
        slug: "real-food"
    },
    {
        title: "Brain Food",
        description: "Foods and nutrients that enhance cognitive function and mental clarity",
        image: "/images/brain-food.jpg",
        slug: "brain-food"
    },
    {
        title: "Glucose Guide",
        description: "Understanding insulin response and blood sugar impact of different foods",
        image: "/images/glucose-guide.jpg",
        slug: "glucose-guide"
    },
    {
        title: "Muscle & Protein",
        description: "Protein-rich foods and muscle-centric nutrition approaches",
        image: "/images/muscle-protein.jpg",
        slug: "muscle-protein"
    }
];
---

<Layout title="Categories | Glowing Body">
    <main class="mx-auto max-w-6xl px-4 py-16">
        <header class="text-center max-w-3xl mx-auto mb-16">
            <h1 class="text-4xl md:text-5xl font-bold mb-8 text-white">Categories</h1>
            <p class="text-xl text-gray-400">
                Explore our content organized by topic
            </p>
        </header>

        <div class="grid md:grid-cols-2 gap-8">
            {categories.map((category) => (
                <a href={`/category/${category.slug}`} 
                   class="group bg-slate-800/50 rounded-lg overflow-hidden hover:bg-slate-800 transition duration-300">
                    <div class="aspect-video relative">
                        <img 
                            src={category.image} 
                            alt={category.title}
                            class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition duration-300"
                        />
                    </div>
                    <div class="p-6">
                        <h2 class="text-2xl font-bold mb-2 text-white">{category.title}</h2>
                        <p class="text-gray-400">{category.description}</p>
                    </div>
                </a>
            ))}
        </div>
    </main>
</Layout>